{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2020",
        "outDir": "dist-electron",
        "skipLibCheck": true,
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "strict": false
    },
    "include": [
        "electron/**/*"
    ],
    "exclude": []
}